<%= form_with model: @user_choice, url: second_user_steps_path, method: :get do |form| %>
  <h6 class="which_one"><%= t('.Notice')%></h6>
  <p class="enum-choice"><%= t('.What do you ride?')%></p>

  <div class="enum-choice">
    <%= form.radio_button(:vehicle, :car, class: "radio-inline__input" ) %>
    <%= form.label(:vehicle, (t'.Car'), value: "car", class: "radio-inline__label") %>
    <%= form.radio_button(:vehicle, :train, class: "radio-inline__input" )%>
    <%= form.label(:vehicle, (t'.Train'), value: "train", class: "radio-inline__label") %>
  </div>


  <div class="actions">
    <%= form.submit (t '.Next'), class: "button004", id: "next" %>
  </div>

  <div class="step_back">
    <%= link_to t('.Back'), user_path(current_user), class: "text-info" %>
  </div>

  <div class="tip">
    <p><%= t('.Is there a place you would like to go with your doggy? ') %> </p>
    <p><%= t('.You can take your dog on trains and bullet trains') %></p>
    <p><%= t('.The regulation size and rules for carry-ons vary from company to company') %></p>
    <p><%= t('.Why don\'t you check with the place you would like to go?') %></p>
  </div>
  
<% end %>