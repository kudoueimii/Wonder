<h2><%= t('.sign_in')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :name, class: "col-md-4 col-form-label" %><br />
    <%= f.text_field :name, autofocus: true, placeholder: true, autocomplete: "name", class: 'form-control' %>
  </div>
  
  <div class="form-group row">
    <%= f.label :email, class: "col-md-4 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, placeholder: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-md-4 col-form-label" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.text_field :password, placeholder: true, autocomplete: "new-password", class: 'form-control' %>
    <br><div><%= @minimum_password_length %> <%= t('.characters minimum') %></div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-md-4 col-form-label" %><br />
    <%= f.text_field :password_confirmation, placeholder: true, autocomplete: "new-password", class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "sign_in" %>
  </div>
<% end %>
