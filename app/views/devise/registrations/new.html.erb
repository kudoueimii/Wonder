<h2><%= t('.sign_in')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "t('.name')", autocomplete: "name", class: 'form-control' %>
  </div>
  
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "t('.email')", autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.text_field :password, placeholder: "t('.password')", autocomplete: "new-password", class: 'form-control' %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %><br />
    <%= f.text_field :password_confirmation, placeholder: "t('.password_confirmation')", autocomplete: "new-password", class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "t('.sign_in)" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
