<div class="center-text">
  <%= link_to t('.Search Dogs'), search_dogs_path %>

  <h1><%=t('.Matching results')%></h1>
  <table>
    <thead>
      <tr>
        <th><%=t('.Name')%></th>
        <th><%=t('.Matching')%></th>
        <th><%=t('.Image')%></th>
      </tr>
    </thead>  <tbody>
      <% Dog.all.each do | dog | %>
        <tr>
          <td><%= dog.name %></td>
          <td class="heart"><p class="rate"><%= matching_result(dog)%>%</p></td>
          <td><%= image_tag dog.image_url, size: '600x500'%></td>
          <td><%= link_to t('.Show'), dog %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @dogs %>