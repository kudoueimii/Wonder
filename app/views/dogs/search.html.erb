<h1>犬種検索</h1>
<%= search_form_for @q, url: search_results_dogs_path do |f| %>
  <%= f.label :name_cont, '犬種名' %>
  <%= f.search_field :name_cont %>
  <%= f.label :size, '大きさ' %>
  <%= f.select :size, Dog.sizes.keys.to_a, { include_blank: "指定なし" } %>
  <%= f.check_box :cleaning_eq, {}, 1 %>
  <%= '抜け毛少ない' %>
  <%= f.check_box :home_eq, {}, 1 %>
  <%= '穏やか' %>
  <br>
  <%= f.submit '検索'  %>
<% end %>

<%= link_to 'Index', dogs_path %>