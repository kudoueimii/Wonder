<h1><%=t('.Dogs')%></h1>
<div class="center-text">
  <table>
    <tbody>
      <div class="card-deck">
        <% @dogs.each do |dog| %>
          <div class="card" flex-direction:row>
            <div class="card-header">
              <%= t('.' + dog.name) %>
            </div>
            <div class="card-body">
              <%= image_tag dog.image_url, size: '300x250'%>
              <%= link_to t('.Show'), dog, class: "text-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </tbody>
  </table>

  <br>

  <%= link_to t('.Search Dogs'), search_dogs_path, class: "text-info" %>

  <%= paginate @dogs %>

  <%= link_to t('.My page'), user_path(current_user.id), class: "text-info"  %>