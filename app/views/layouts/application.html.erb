<!DOCTYPE html>
<html>
  <head>
    <title>Wonder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
          <%= link_to image_tag('logo.png', width: 180), "/" %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-md-auto align-items-center">
              <%if user_signed_in?%>
                <li>
                  <%= link_to search_dogs_path do %>
                    <%= image_tag('search.png', width: 30) %>
                    <p class="logo-text"><%= t('application.application.Search') %></p>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <%= image_tag('mypage.png', width: 30) %>
                    <p class="logo-text"><%= t('application.application.My page') %></p>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path do %>
                    <%= image_tag('logout.png', width: 30, alt: 'Logout') %>
                    <p class="logo-text"><%= t('application.application.Logout') %></p>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_user_session_path do %>
                    <%= image_tag('login.png', width: 30) %>
                    <p class="logo-text"><%= t('application.application.Login') %></p>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <div class="outline">
      <div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      <%= yield %>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
      <% unless current_page?(root_path) %>
        <footer class="footer">
          <p class="text-muted">The best therapist has fur and four legs.</p>
        </footer>
      <% end %>
    </div>
  </body>
</html>
