<%= form_with model: @user_choice, url: user_steps_path, do |form| %>
  <P class="enum-choice"><%=t('.About family')%></p>

  <div class="enum-choice">
    <%= form.radio_button(:vehicle, :car, class: "radio-inline__input" )%>
    <%= form.label(:vehicle, "car", value: "car", class: "radio-inline__label") %>
    <%= form.radio_button(:vehicle, :train, class: "radio-inline__input" )%>
    <%= form.label(:vehicle, "train", value: "train", class: "radio-inline__label") %>
    
    <%= form.radio_button :cleaning, :like, class: "radio-inline__input"%>
    <%= form.label(:cleaning, "like", value: "like", class: "radio-inline__label") %>
    <%= form.radio_button :cleaning, :dislike, class: "radio-inline__input" %>
    <%= form.label(:cleaning, "dislike", value: "dislike", class: "radio-inline__label") %>


    <%= form.radio_button :home, :kids, class: "radio-inline__input" %>
    <%= form.label(:home, "kids", value: "kids", class: "radio-inline__label") %>
    <%= form.radio_button :home, :none, class: "radio-inline__input" %>
    <%= form.label(:home, "none", value: "none", class: "radio-inline__label") %>
  </div>
  
  <div class="actions">
    <%= form.submit class: "button004"%>
  </div>
<% end %>